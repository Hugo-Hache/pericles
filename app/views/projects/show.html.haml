%h1= @project.title

.flexcontainer.flexcontainer-justify-end
  .btn-group{ role: "group" }
    = link_to t('edit'), edit_project_path(@project), class: "btn btn-default"

%h4 Description
%p
  = simple_format(@project.description)

- unless @project.proxy_url.blank?

  %h4 Proxied server
  %p= @project.proxy_url

  %h4 Proxy url
  %p= project_proxy_url(@project)

%h4 Mock Url
= link_to project_mocks_root_url(@project), project_mocks_root_url(@project)

%h4 JSON Schemas
= link_to t('download'), project_path(@project, format: 'zip'), class: 'btn btn-default'


= link_to t('delete'), project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default", id: 'delete-button'
