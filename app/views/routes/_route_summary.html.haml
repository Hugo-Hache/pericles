.panel.panel-default
  .panel-body
    .row
      .col-xs-2.http-method-column
        %span{ class: label_class_for_http_method(route.http_method) }= route.http_method
      .col-xs-3
        %dl
          %dt URL
          %dd= route.url
          -if url = local_assigns[:real_url]
            %dd
              %strong= url
      .col-xs-3
        %dl
          %dt Description
          %dd= route.description
      .col-xs-3
        - unless route.resource_representations.empty?
          %dl
            %dt Resource representations
            %dd= route.resource_representations.uniq.map(&:name).join(", ")
      - if resource = local_assigns[:resource]
        .col-xs-1
          = link_to 'Show', resource_route_path(resource, route), class: "btn btn-default btn-md"
